@mixin bounceIn($t) {
-webkit-animation: bounceIn $t; /* Safari, Chrome and Opera > 12.1 */
   -moz-animation: bounceIn $t; /* Firefox < 16 */
    -ms-animation: bounceIn $t; /* Internet Explorer */
     -o-animation: bounceIn $t; /* Opera < 12.1 */
        animation: bounceIn $t;
}


@keyframes bounceIn {
  0% {
    transform: scale(0.1);
    opacity: 0;
  }
  60% {
    transform: scale(1.2);
    opacity: 1;
  }
  100% {
    transform: scale(1);
  }
}
