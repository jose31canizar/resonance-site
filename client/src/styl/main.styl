@import './variables.styl'
@import './helpers/transition.styl'
@import './helpers/user_select.styl'
@import './helpers/user_drag.styl'
@import './Animations.styl'

@font-face {
  font-family: 'Gotham'
  font-style: normal
  font-weight: 400
  src: url('../fonts/Gotham.eot')
  src: local('Gotham'),
    url('../fonts/gotham.woff2') format('woff2'),
    url('../fonts/gotham.otf') format('otf'),
    url('../fonts/Gotham.ttf') format('ttf'),
    url('../fonts/gotham.woff') format('woff')
}


@font-face {
  font-family: 'Ano'
  font-style: normal
  font-weight: 400
  src: url('../fonts/AnoRegular-Regular.eot')
  src: local('Ano'),
    url('../fonts/AnoRegular-Regular.woff2') format('woff2'),
    url('../fonts/AnoRegular-Regular.otf') format('otf'),
    url('../fonts/AnoRegular-Regular.ttf') format('ttf'),
    url('../fonts/AnoRegular-Regular.woff') format('woff')
}

@font-face {
  font-family: 'Avenir'
  font-style: normal
  font-weight: 400
  src: url('../fonts/Avenir.eot')
  src: local('Avenir'),
    url('../fonts/avenir.woff2') format('woff2'),
    url('../fonts/Avenir.otf') format('otf'),
    url('../fonts/avenir.ttf') format('ttf'),
    url('../fonts/avenir.woff') format('woff')
}

@font-face {
  font-family: 'Avenir-Heavy'
  font-style: normal
  font-weight: 400
  src: url('../fonts/avenir-heavy.eot')
  src: local('Avenir-Heavy'),
    url('../fonts/Avenir-Heavy.woff2') format('woff2'),
    url('../fonts/avenir-heavy.otf') format('otf'),
    url('../fonts/Avenir-Heavy.ttf') format('ttf'),
    url('../fonts/Avenir-Heavy.woff') format('woff')
}

html
  overflow-x: hidden
  width: 100%
  position: absolute

*
  box-sizing: border-box

body
  margin: 0
  padding: 0
  overflow-x: hidden
  position: absolute
  -webkit-tap-highlight-color: rgba(0 0 0 0)
  video
    object-position: 50% 50%
    width: 100vw
    height: 80vh
    object-fit: cover
    overflow: hidden
    pointer-events: none
    @media all and (max-width: 1200px)
      margin-left: 0

  #root
    width: 100vw

  .App
    width: 100%
    overflow-x: hidden
    background: section-color
    .layout
      width: 100%

  .left-border
  .right-border
    position: fixed
    top: 0
    height: 100vh
    width: 5vw
    background: section-color
    z-index: 2

    @media all and (max-width: 700px)
      width: 0

  .left-border
    left: 0
  .right-border
    right: 0

  h1
  h2
  h3
  h4
  h5
  h6
  p
  li
  ul
  button
  b
  time
  a
    font-family: 'Avenir', sans-serif
    font-weight: 100
    margin: 0
    padding: 0
    user-select: none
    color: #555056

  li
    list-style: none
    font-size: 1.5em
    color: #555056


  a
    font-size: 1rem
    color: #9090cc
    text-decoration: none
    line-height: 1

  h1
    font-size: 1.75em
    color: #000000
    font-weight: 700


  h2
    font-family: 'Avenir', sans-serif
    font-size: 1.5rem
    font-weight: 900
    color: #504550
    text-align: center
    line-height: 1.3rem

  h3
    font-family: 'Avenir', sans-serif
    font-size: 1.4rem
    color: #6A5B69
    font-weight: 600

  h4
    font-size: 1.3rem
    color: #e86b37ed
    font-weight: 900

  p
  span
    font-size: 0.9rem
    color: #545156
    line-height: 1.3rem
    font-weight: 900
  label
    font-family: 'Avenir', sans-serif
    letter-spacing: 0.1rem
    font-weight: 900
  img
    width: 100%

  section
    padding: 0 25rem
    @media all and (max-width: 1200px)
      padding: 1rem