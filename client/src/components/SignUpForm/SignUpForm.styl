button-color = #fff
button-hover-color = #2f2e31
button-border-color = #352626
theme-color = #4b3a56

.sign-up-form
  animation: fadein 0.2s
  a
    width: 100%
  width: 100%
  height: 100vh
  position: absolute
  z-index: 12
  background: rgba(82, 72, 72, 0.5)
  display: flex
  justify-content: space-around
  align-items: center
  flex-direction: column
  .registration-block
    border-radius: 15px
    box-shadow: 1px 0 10px 0 rgba(50,50,50,0.6)
    animation: slidein 0.5s ease-in-out
    background: white
    width: 75%
    padding: 50px 50px
    box-sizing: border-box
    display: flex
    justify-content: center
    align-items: center
    flex-direction: column
    @media all and (max-width: 700px)
      width: 75%
      padding: 20px 0
      border-radius: 0
    h2
      padding-bottom: 50px
      text-align: center
      cursor: default
      @media all and (max-width: 700px)
        padding: 0
        padding-bottom: 20px
        font-size: 2em
        width: 75%
    h3
      font-weight: 900
      font-size: 1.7em
      text-align: center
      color: rgb(53, 48, 48)
      padding-bottom: 25px
      width: 50%
      cursor: default
      @media all and (max-width: 700px)
        padding: 0 20px
        padding-bottom: 0
        font-size: 0.5em
        width: auto
    form
      width: 90%
      display: flex
      justify-content: center
      align-items: center
      flex-direction: column
      .warning
        font-size: 1.5em
        color: rgb(53, 48, 48)
        padding: 0 10px
      input
        font-size: 2em
        letter-spacing: 3px
        border-radius: 0
        width: 100%
        -webkit-appearance: none
        border: none
        outline: none
        background: transparent
        font-weight: 600
        font-family: 'Avenir', Futura, Helvetica, sans-serif
        border-bottom: 2px solid theme-color
        transition: 0.5s ease
        color: button-border-color
        caret-color: theme-color
        padding-bottom: 10px
        margin: 10px 0
        @media all and (max-width: 700px)
          margin-top: 10px
          padding: 0
          font-size: 1.5em
      input:focus
        border-bottom: 5px solid theme-color
      .submit-button
        user-select: none
        cursor: pointer
        border-radius: 15px
        box-shadow: 0 0 42px -1px rgba(122, 106, 127, 0.5)
        background: button-color
        -webkit-text-fill-color: button-border-color
        transition: opacity 0.3s, transform 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94), background 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94), color 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94), -webkit-transform 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94)
        /*box-shadow: 0 16px 18px 0 rgba(0,0,0,0.13), 0 4px 6px 0 rgba(0,0,0,0.16)*/
        padding: 20px
        margin: 20px 0
        box-sizing: border-box
        -webkit-appearance: none
        text-align: center
        display: flex
        flex-direction: column
        perspective: 1000px
        @media all and (max-width: 700px)
          white-space: nowrap
        .shown-text
          transition: 0.4s ease
          color: red
          height: 0
          transform-origin: center
          transform: rotate3d(1, 0, 0, 0)
        .hidden-text
          transform-origin: bottom
          transition: 0.4s ease
          -webkit-text-fill-color: white
          transform: rotate3d(1, 0, 0, -90deg)
      .submit-button:hover > .shown-text
          -webkit-text-fill-color: rgb(53, 38, 38)
          transform: rotate3d(1, 0, 0, -90deg)
      .submit-button:hover > .hidden-text
          -webkit-text-fill-color: white
          transform: rotate3d(1, 0, 0, -0deg)
      .submit-button:hover
        background: button-hover-color
        border-color: button-hover-color
        -webkit-text-fill-color: white
      .submit-button-container
        padding: 20px
        margin: 10px
        margin-bottom: 0
        width: 100%