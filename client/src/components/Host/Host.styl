.host
  width: 100%
  background: white
  padding: 100px
  box-sizing: border-box
  display: flex
  justify-content: center
  align-items: center
  flex-direction: column
  @media all and (max-width: 700px)
    padding: 0
    padding-top: 60px
  h2
    margin: 50px 0
    @media all and (max-width: 600px)
      width: 70%
    @media all and (max-width: 700px)
      margin: 0
      padding: 10px 0
      font-size: 1.7em
      margin-bottom: 50px
      width: 85%
    @media all and (max-width: 1400px)
      margin-bottom: 80px
      width: 75%
  .top-description
    width: 100%
    display: flex
    justify-content: center
    align-items: flex-start
    @media all and (max-width: 1400px)
      display: block
    @media all and (max-width: 700px)
      display: flex
      align-items: center
      flex-direction: column
    .media
      @media all and (max-width: 1400px)
        width: 100%
      @media all and (max-width: 700px)
        display: flex
        width: 70%
      width: 50%
      display: flex
      justify-content: center
      flex-direction: column
      align-items: center
      img
        width: 50%
        object-fit: contain
        margin-bottom: 50px
        @media all and (max-width: 1200px)
          width: 70%
        @media all and (max-width: 700px)
          width: 100%
    .right-description
      width: 50%
      display: flex
      justify-content: center
      align-items: center
      flex-direction: column
      @media all and (max-width: 700px)
        width: 75%
        margin: 0
        padding-top: 20px
        h4
          width: 100%
      @media only screen and (min-width: 700px) and (max-width: 1199px)
        margin-top: 40px
        width: 100%
        padding: 0 85px
        box-sizing: border-box
      @media only screen and (min-device-width: 1024px) and (max-device-width: 1366px) and (orientation: portrait) and (-webkit-min-device-pixel-ratio: 1.5)
        margin-top: 40px
        width: 100%
        padding: 0 130px
        box-sizing: border-box
  .bottom-description
    width: 100%
    margin-left: 50px
    @media all and (max-width: 700px)
      margin: 0
      width: 75%
  p
    margin: 25px 0
    line-height: 1.3em;
  img
    width: 40%
    @media all and (max-width: 700px)
      width: 75%
