.article
  padding: 200px 500px
  @media all and (max-width: 1200px)
    padding: 200px 50px
    padding-top: 100vh
  width: 100%
  display: flex
  justify-content: flex-end
  background: white
  box-sizing: border-box
  flex-direction: column
  // p:first-of-type::first-letter
  time
    font-weight: 900
    color: #504550
  label
    font-weight: 900
    color: #c1bfc5
  p
    color: black
    text-align: left
    font-size: 1em
  span
    font-size: 2em
    color: #2f2b2b
  h2
    font-size: 2em
    padding: 50px
    padding-left: 0
    text-align: left
  h3
    font-size: 1.5em
    padding: 50px
    padding-left: 0
    text-align: center
