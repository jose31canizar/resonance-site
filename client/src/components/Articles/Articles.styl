.article
  padding: 200px 500px
  padding-top: 130px
  @media all and (max-width: 2200px)
    padding: 200px 300px
  @media all and (max-width: 1200px)
    padding: 200px 50px
    padding-top: 110vh
  width: 100%
  display: flex
  justify-content: flex-end
  background: white
  box-sizing: border-box
  flex-direction: column
