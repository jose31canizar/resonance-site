.speaker-intro
  width: 100%
  background: #c4c4c4
  display: flex
  flex-direction: column
  white-space: pre-line
  justify-content: center
  align-items: center
  h2
  h1
    font-family: 'Baskerville', 'Libre Baskerville', sans-serif
    text-align: center
    font-weight: 600
    color: white
    width: 100%
    padding-top: 80px
    padding-bottom: 0px
    z-index: 6
    @media all and (max-width: 700px)
      width: 85%
      text-align: left
      font-size: 2.3em
  h2
    font-family: 'Baskerville', 'Libre Baskerville', sans-serif
    color: white
    font-size: 2.2em
    padding-top: 40px
    padding-bottom: 80px
    text-align: center
    font-weight: 300
    z-index: 6
    @media all and (max-width: 700px)
      font-size: 1.4em
      text-align: right
