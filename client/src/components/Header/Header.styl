.header
  width: 100%
  background: #ffffff
  padding: 50px
  padding-top: 18vh
  box-sizing: border-box
  display: flex
  justify-content: center
  flex-direction: column
  height: 100vh
  @media all and (max-width: 1500px)
    padding: 0
    padding-top: 18vh
  @media all and (max-width: 1200px)
    padding-top: 100vh
  img
    object-fit: contain
  .ticket-img
    width: 4rem
  .phone-img
    width: 12rem
  .headline
    display: flex
    justify-content: center
    align-items: center
    h2
      padding: 4rem
      width: 100%
      @media all and (max-width: 700px)
        padding-top: 50px
        width: 90%
        white-space: pre-wrap
  .header-content
    display: flex
    justify-content: center
    align-items: center
    width: 100%
    align-items: center
    position: relative
    @media all and (max-width: 1200px)
      justify-content: center
      flex-direction: column
    video
      object-position: 50% 50%
      width: 300px
      height: 533px
      object-fit: cover
      border-radius: 35px
      overflow: hidden
      background: white
      display: block
      pointer-events: none
      @media all and (max-width: 1200px)
        display: none
    .description
      width: 12rem
      @media all and (max-width: 1200px)
        padding: 200px
        box-sizing: border-box
        padding-top: 50px
        width: 100%
        display: flex
        justify-content: center
        flex-direction: column
        align-items: center
  .ticket-text
    text-align: center
    padding: 1rem
    box-sizing: border-box
  p
    margin: 0
    text-align: left
    @media all and (max-width: 1200px)
      margin-left: 0
      display: flex
      justify-content: center
      align-items: center
      flex-direction: column
