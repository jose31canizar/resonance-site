.benefits
  width: 100%
  background: white
  @media all and (max-width: 700px)
    padding-top: 70px
  h2
    padding: 10px 0
    color: #50454F
    @media all and (max-width: 700px)
      padding: 10px 45px
  .benefit
    display: flex
    align-items: flex-start
    justify-content: space-around
    @media all and (max-width: 1500px)
      padding: 50px 10px
      flex-direction: column
    @media all and (max-width: 700px)
      flex-direction: column
      padding: 40px 0
  .content
    width: 100%
    display: flex
    flex-direction: column
    justify-content: center
    @media all and (max-width: 1200px)
      width: 75%
    @media all and (max-width: 700px)
      justify-content: center
      align-items: center
      width: 75%
    .benefit-problem, .benefit-solution
      width: 100%
      justify-content: flex-start
    .benefit-title
      margin-bottom: 1rem
  img
    width: 20%
    @media all and (max-width: 700px)
      width: 50%
      object-fit: contain
  .number
    margin-bottom: 20px
    font-size: 5em
    font-family: 'Gotham', Futura, sans-serif
    color: #6A5B69
    padding: 0
