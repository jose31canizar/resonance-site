.info
  width: 100%
  background: white
  box-sizing: border-box
  display: flex
  justify-content: center
  flex-direction: column
  align-items: center
  .block-row
    width: 100%
    display: grid
    grid-template-columns: 50% 50%
    @media all and (max-width: 1200px)
      grid-template-columns: 33% 33%
      padding: 0
    @media all and (max-width: 700px)
      grid-row-gap: 70px
      grid-template-columns: 100%
    grid-template-rows: auto
    justify-items: center
    justify-content: center
    align-content: center
    .feature-item
      padding: 5rem
      box-sizing: border-box
      width: 100%
      @media all and (max-width: 700px)
        width: 100%
        padding: 0 40px
        box-sizing: border-box
        margin-bottom: 40px
      .info-block-caption
        padding: 0
        text-align: left
  .feature-item
    padding: 0 100px
    box-sizing: border-box
    width: 100%
    @media all and (max-width: 700px)
      width: 100%
      padding: 0 40px
      box-sizing: border-box
      margin-bottom: 40px
    .img-feature
      width: 100%
      margin: auto
      justify-content: center
      @media all and (max-width: 700px)
        padding: 50px
        box-sizing: border-box
    .facts
      p
        @media all and (max-width: 700px)
          padding: 0
          padding-top: 20px
  .epilogue
    margin-top: 100px
    text-align: center
    @media all and (max-width: 700px)
      font-size: 1.6em
      margin: 0
