.info
  width: 100%
  background: white
  padding-top: 100px
  padding: 50px
  box-sizing: border-box
  display: flex
  justify-content: center
  flex-direction: column
  align-items: center
  white-space: pre-line
  @media all and (max-width: 700px)
    padding: 0
  p
    text-align: left
    padding: 10px 0
    box-sizing: border-box
    @media all and (max-width: 700px)
      padding: 10px 56px
    @media all and (max-width: 1200px)
      padding: 50px 200px
      text-align: center

  h2
    padding-top: 50px
    padding-bottom: 20px
  h3
    text-align: center
    color: #504550
    width: 100%
    padding-top: 40px
    padding-bottom:60px

  h4
    text-align: center
    width: 100%
    padding: 40px 0
    font-weight: 900
    @media all and (max-width: 700px)
      padding: 20px 0
  h2
  h3
  h4
    @media all and (max-width: 1200px)
      text-align: center
  .conclusion
    width: 49%
    @media all and (max-width: 700px)
      padding: 10px 56px
      width: 100%
    p
    text-align: center;
    line-height: 1.5em;
    padding: 10px 0;
    @media all and (max-width: 700px)
      text-align: left
      white-space: normal;
  .reasons
    padding-bottom: 30px
    @media all and (max-width: 1200px)
      padding: 50px
    @media all and (max-width: 1200px)
      padding: 0
    p
      @media all and (max-width: 700px)
        font-size: 1.5em
  .block-row
    width: 100%
    display: grid
    column-gap: 1em
    grid-row-gap: 100px
    grid-template-columns: 43% 43%
    @media all and (max-width: 1200px)
      grid-template-columns: 33% 33%
      padding: 0
    @media all and (max-width: 700px)
      grid-row-gap: 70px
      grid-template-columns: 100%
    grid-template-rows: auto
    justify-items: center
    justify-content: center
    align-content: center
    .topic
      padding: 0 100px
      box-sizing: border-box
      width: 100%
      @media all and (max-width: 1200px)
        padding: 25px
      @media all and (max-width: 700px)
        width: 100%
        padding: 0 40px
        box-sizing: border-box
        margin-bottom: 40px
      .info-block-caption
        padding: 0
        text-align: left
        font-size: 1.5em
  .topic
    padding: 0 100px
    box-sizing: border-box
    width: 100%
    @media all and (max-width: 700px)
      width: 100%
      padding: 0 40px
      box-sizing: border-box
      margin-bottom: 40px
    .img-feature
      width: 100%
      margin: auto
      justify-content: center
      @media all and (max-width: 700px)
        padding: 50px
        box-sizing: border-box
    .facts
      p
        @media all and (max-width: 700px)
          padding: 0
          padding-top: 20px
  .epilogue
    margin-top: 100px
    text-align: center
    @media all and (max-width: 700px)
      font-size: 1.6em
      margin: 0
