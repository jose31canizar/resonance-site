button-color = #352626
button-hover-color = #fff
button-border-color = #fff
theme-color = #79737d

.login
  height: 100vh;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  form
    display: flex
    flex-direction: column
    padding: 100px
  input
    border-radius: 0
    width: 100%
    -webkit-appearance: none
    border: none
    outline: none
    background: white
    font-size: 2em
    font-weight: 600
    font-family: 'Avenir', Futura, Helvetica, sans-serif
    border-bottom: 0.5pt solid theme-color
    /* -webkit-text-fill-color: theme-color */
    color: black
    caret-color: theme-color
    padding: 10px 5px 
    margin: 10px 0
    text-transform: lowercase
    @media all and (max-width: 700px)
      padding: 15px 5px
      font-size: 1.5em
  .submit-button
    user-select: none
    cursor: pointer
    border: 2pt solid button-border-color
    background: transparent
    -webkit-text-fill-color: button-border-color
    color: button-border-color
    transition: opacity 0.3s, transform 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94), background 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94), color 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94), -webkit-transform 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94)
    box-shadow: 0 16px 18px 0 rgba(0,0,0,0.13), 0 4px 6px 0 rgba(0,0,0,0.16)
    padding: 30px
    margin: 20px 0
    box-sizing: border-box
    -webkit-appearance: none
    text-align: center
    font-size: 2em
    font-family: Gotham
    font-weight: 900
    @media all and (max-width: 700px)
      white-space: pre-line
      font-size: 2em
  .submit-button:hover
    background: button-hover-color
    border-color: button-hover-color
    color: black
    -webkit-text-fill-color: black
  .submit-button-container
    padding-top: 40px
  .mask-button
    display: flex
    justify-content: flex-end
  .mask-button:hover
    color: #fbbb81
    cursor: pointer