.featured
  padding-top: 130px
  @media all and (max-width: 1200px)
    padding-top: 100vh
  display: flex
  justify-content: center
  align-items: center
  background: #f1f1f1
  @media all and (max-width: 1200px)
    flex-direction: column
  h2
    padding: 10px 0
    text-align: left
    grid-row: 1
    margin: 20px
    margin-left: 0
    @media all and (max-width: 1200px)
      padding: 40px 0
      text-align: center
      width: 100%
  .feature
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    grid-template-rows: repeat(2, 1fr);
    @media all and (max-width: 1200px)
      display: flex
      flex-direction: column
    align-items: flex-start
    box-sizing: border-box;
    padding: 60px 5vw;
    .feature-image
      box-shadow: 2px 0 10px 0 rgba(53, 48, 48, 0.5)
      width: 100%
      @media all and (max-width: 1200px)
        grid-row: 2
        width: 50%
      margin: 0 auto
      display: flex
      justify-content: center
      align-items: center
      img
        z-index: 0
        transition: 0.5s ease-in-out
      .hover-title
        position: absolute
        z-index: 1
        font-size: 1.4em
        color: white
        animation: slideup 0.4s
        @media all and (max-width: 1200px)
          font-size: 1em
      .show
        display: block
      .hide
        display: none
    .feature-image:hover
      img
        filter: brightness(40%) contrast(80%)
    .feature-info
      background: white
      padding: 25px
      box-sizing: border-box
      box-shadow: 1px 0 25px 0 rgba(53, 48, 48, 0.1)
      @media all and (max-width: 1200px)
        grid-row: 1/4
        width: 50%
        align-items: center
        display: flex
        justify-content: space-around
        flex-direction: column
      width: 100%
      height: 100%
      margin: 0 auto
      time
        font-size: 1em
        letter-spacing: 5px
      p
        color: #504550
        padding: 20px 0
        text-align: left

